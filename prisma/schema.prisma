// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  username      String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  approved_text Text[]   @relation("UserModifiedText")
  rejected_list Text[]   @relation("UserRejectedText")
  ignored_list  Text[]   @relation("UserIgnoredText")
  reviewed_list  Text[]   @relation("UserReviewedText")
  assigned_batch String[]    
  assigned_batch_for_review String[]    
  role          Role     @default(annotator)
}

enum Role {
  owner
  admin
  annotator
  reviewer
}

model Text {
  id             String      @id 
  original_text  String
  modified_text  String?
  status         Status?
  modified_by    User?    @relation("UserModifiedText", fields: [modified_by_id], references: [id])
  modified_by_id String?
  rejected_by    User[]   @relation("UserRejectedText")
  ignored_by     User[]   @relation("UserIgnoredText")
  order          Int?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  batch         String?
  reviewed_text       String? 
  reviewer       User?    @relation("UserReviewedText", fields: [reviewer_id], references: [id])
  reviewer_id    String?
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

